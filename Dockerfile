# -------- Build --------
FROM node:22-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# -------- Run (nginx) --------
FROM nginx:1.27-alpine AS prod

# SPA + health endpoint
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# Static build
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
